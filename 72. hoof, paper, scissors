n = int(input())
hw = [0] * (n+1)
pw = [0] * (n+1)
sw = [0] * (n+1)
for i in range(1, n+1):
  s = input()
  if s == "P":
    sw[i] = sw[i-1] + 1
    hw[i] = hw[i-1]
    pw[i] = pw[i-1]
  elif s == "H":
    pw[i] = pw[i-1] + 1
    hw[i] = hw[i-1]
    sw[i] = sw[i-1]
  else:
    hw[i] = hw[i-1] + 1
    pw[i] = pw[i-1]
    sw[i] = sw[i-1]
best = 0
for i in range(1, n+1):
  best = max(best, sw[i] + pw[n] - pw[i])
  best = max(best, sw[i] + hw[n] - hw[i])
  best = max(best, hw[i] + pw[n] - pw[i])
  best = max(best, hw[i] + sw[n] - sw[i])
  best = max(best, pw[i] + hw[n] - hw[i])
  best = max(best, pw[i] + sw[n] - sw[i])
print(best)
