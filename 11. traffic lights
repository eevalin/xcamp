#include <bits/stdc++.h>
using namespace std;

int main(){
  long long n, x;
  cin >> x >> n;
  set<pair<long long, long long>> r;
  r.insert({0, x});
  multiset<long long> l;
  l.insert(x);
  vector<long long> p (n);
  for (int i = 0; i < n; i++) cin >> p[i];
  for (int i = 0; i < n; i++){
    auto u = r.upper_bound({p[i], 0});
    u--;
    int start = u->first;
    int end = u->second;
    r.erase(u);
    l.erase(l.find(end-start));
    r.insert({start,p[i]});
    r.insert({p[i], end});
    l.insert(p[i] - start);
    l.insert(end-p[i]);
    cout << *l.rbegin() << " ";
  }
  return 0;
}
