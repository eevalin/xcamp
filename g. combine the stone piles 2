n = int(input())
a = [int(x) for x in input().split()]
b = a + a
preb = [0] * (2*n + 1)
dp = [[float('inf')] * (2*n+1) for i in range(2*n+1)]
dp[0][0] = 0
for i in range(1, 2*n + 1):
  preb[i] = preb[i - 1] + b[i - 1]
  dp[i][i] = 0
for i in range(2, n+1):
  for start in range(1, 2*n - i + 1):
    end = start + i - 1
    for j in range (start, end + 1):
      dp[start][end] = min(dp[start][end], dp[start][j] + dp[j + 1][end] + preb[end] - preb[start - 1])
best = float('inf')
for i in range(1, n + 1):
  best = min(best, dp[i][i + n - 1])
print(best)
