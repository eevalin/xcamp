#include <bits/stdc++.h>
using namespace std;

int main(){
  int n;
  cin >> n;
  vector<int> count (n);
  int ans = 0;
  for (int i = 0; i < n-1; i++){
    int a, b;
    cin >> a >> b;
    a--, b--;
    count[a]++, count[b]++;
    ans = max(ans, count[a]);
    ans = max(ans, count[b]);
  }
  cout << ans + 1;
}
