#include <bits/stdc++.h>
using namespace std;

bool works(int mid, vector<long long>& x, int k){
  long long cur = 0;
  int count = 0;
  for (long long pos : x){
    if (pos > cur){
      cur = pos + 2*mid;
      count++;
    }
    //cout << cur << " " << count << '\n';
  }
  return count <= k;
}

int main(){
  int n, k;
  cin >> n >> k;
  vector<long long> x (n);
  long long maxx = 0;
  for (int i = 0; i < n; i++){
    cin >> x[i];
    maxx = max(maxx, x[i]);
  }
  sort(x.begin(), x.end());
  int left = 0;
  int right = maxx;
  while (left <= right){
    int mid = left + (right - left)/2;
    if (works(mid, x, k)) right = mid - 1;
    else left = mid + 1;
    //cout << mid << "mid\n";
  }
  if (works(left, x, k)) cout << left;
  else cout << right;
  //cout << works(4, x, k);
}
