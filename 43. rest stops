#include <bits/stdc++.h>
using namespace std;

int main(){
  int l, n, rf, rb;
  cin >> l >> n >> rf >> rb;
  vector<vector<int>> rest (n, vector<int>(3));
  for (int i = 0; i < n; i++){
    cin >> rest[i][1] >> rest[i][2];
    rest[i][0] = i;
  }
  vector<vector<int>> prefixmax (n);
  prefixmax[n-1] = rest[n-1];
  for (int i = n - 2; i >= 0; i--){
    if (rest[i][2] > prefixmax[i+1][2]) prefixmax[i] = rest[i];
    else prefixmax[i] = prefixmax[i+1];
  }
  long long ans = 0;
  long long fjpos = 0;
  long long bpos = 0;
  for (int i = 0; i < n; i++){
    if (prefixmax[i][0] == i){
      long long t = rf * (prefixmax[i][1] - fjpos) - rb * (prefixmax[i][1] - bpos);
      ans += t * prefixmax[i][2];
      fjpos = prefixmax[i][1];
      bpos = prefixmax[i][1];
    }
  }
  cout << ans;
}
